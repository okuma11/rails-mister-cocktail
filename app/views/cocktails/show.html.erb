<h1>Cocktail details</h1>
<p><%= @cocktail.name %></p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.ingredient.name %>:<%= link_to "Delete", dose_path(dose),
    method: :delete,  data: { confirm: "Are you sure?" } %>
</li>
  <p><%= dose.description %></p>
  <% end %>
</ul>

<%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Back", cocktails_path %>
